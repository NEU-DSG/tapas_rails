%div.toolbar#toolbar
  - if current_user
    %a.collapsed.toolbar-link{:href => "#tools", "data-toggle" => "collapse"}
      %span.fa-stack.fa-lg
        %i.fa.fa-square.fa-stack-2x
        %i.fa.fa-wrench.fa-stack-1x
      %span.toolbar-title
        = "Tools"
    %section#tools.tools.wrench.collapse
      %div.tools-content
        %ul.menu.nav
          = render partial: "/shared/menu", locals:{menu:"toolbar_tools"}
          %li.leaf
            %a{:href=>"/users/#{current_user.id}"}
              = "My Account"
  - else
    -# %a{:href => new_user_session_path, :class => "toolbar-link"}
    %a{:href => '/', :class => "toolbar-link"}
      %span.fa-stack.fa-lg
        %i.fa.fa-square.fa-stack-2x
        %i.fa.fa-sign-in.fa-stack-1x.fa-inverse
      %span.toolbar-title
        = "Sign In"
