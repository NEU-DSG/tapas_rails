%div#carousel_featured.carousel.slide{"data-ride"=>"carousel"}
  %ol.carousel-indicators
    %li.active{"data-target"=>"#carousel_featured", "data-slide-to"=>"0"}
    %li{"data-target"=>"#carousel_featured", "data-slide-to"=>"1"}
    %li{"data-target"=>"#carousel_featured", "data-slide-to"=>"2"}

  %div.carousel-inner{"role"=>"listbox"}
    - @featured_core.each_with_index do |c, i|
      %div.item{"class"=>("active" if i == 0)}
        - if c.thumbnail_list.length > 0
          %img{"src"=>c.thumbnail_list[0]}
        - else
          %img{"src"=>"/assets/tapaslogo-opaque.png"}
        %div.carousel-caption
          %h4
            = link_to(c.title, core_file_path(c.id))

  %a.left.carousel-control{"href"=>"#carousel_featured", "role"=>"button", "data-slide"=>"prev"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden"=>"true"}
    %span.sr-only
      ="Previous"
  %a.right.carousel-control{"href"=>"#carousel_featured", "role"=>"button", "data-slide"=>"next"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden"=>"true"}
    %span.sr-only
      ="Next"
